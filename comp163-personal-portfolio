total_followers = 439
contact_count = 3


completed_count = 5
academic_load = 37
entertainment_count = 5
hobbies = ["Photography", "Crochet", "Reading", "Gaming", "Hiking"]


total_credits = sum(course_credits.get(c, 0) for c in current_courses)



print("================================================================")
print(" ")
print("              PERSONAL ACADEMIC & LIFE PORTFOLIO")
print(" ")
print("================================================================")
print(" ")
print(f"Student: \n{full_name} | Email: {student_email}")
